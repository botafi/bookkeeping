@using Microsoft.AspNetCore.Identity
@using Bookkeeping.Models
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Odhlásit se</button>
    </form>
}
else
{
    @model LoginViewModel
    <form asp-area="" asp-controller="Account" asp-action="Login" method="post" id="loginForm" class="form-inline my-2 my-lg-0">
        <input asp-for="Email" class="form-control mr-sm-2" type="email" placeholder="Email" aria-label="Email">
        <input asp-for="Password" class="form-control mr-sm-2" type="password" placeholder="Heslo" aria-label="Heslo">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pøihlásit</button>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
}

