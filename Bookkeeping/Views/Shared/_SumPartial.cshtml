@using Microsoft.AspNetCore.Identity
@using Bookkeeping.Models
@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="row justify-content-around">
        <div class="col-md-2">
            <h4 class="text-center">Zisk</h4>
            <hr />
            <p class="text-center">@(ViewBag.Sum != null ? ViewBag.Sum : 0) Kč</p>
        </div>
        <div class="col-md-2">
            <h4 class="text-center">Příjmy</h4>
            <hr />
            <p class="text-center">@(ViewBag.Income != null ? ViewBag.Income : 0) Kč</p>
        </div>
        <div class="col-md-2">
            <h4 class="text-center">Náklady</h4>
            <hr />
            <p class="text-center">@(ViewBag.Expense != null ? ViewBag.Expense : 0) Kč</p>
        </div>
    </div>
}